<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<style>
    .pro {
        float:none;
        margin-left: auto;
        margin-right: auto;
    }
    .name{
        width: 30%;
       }
</style>
{{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge" class="badge badge-pill badge-danger"><a href="/remove/{{this.item._id}}">
                            <span class="glyphicon glyphicon-trash" class="badge"></span>
                        </a>
                        </span>

                        <span class="name">  <strong>{{ this.item.title }}</strong></span>

                        <span class="label label-success">Rs{{ this.price }}</span>
                        <span class="pro">
                        <a href="/reduce/{{this.item._id}}">
                        <span class="glyphicon glyphicon-minus"></span>
                        </a>
                            <span class="numberCircle">{{ this.qty }}</span>
                        <a href="/increase/{{this.item._id}}">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                          </span>

                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No items in cart</h2>
        </div>
    </div>
{{/if}}

